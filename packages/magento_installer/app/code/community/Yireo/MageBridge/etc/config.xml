<config>

    <modules>
        <Yireo_MageBridge>
            <version>1.8.5039</version>
        </Yireo_MageBridge>
    </modules>

    <global>

        <blocks>
            <magebridge>
                <class>Yireo_MageBridge_Block</class>
            </magebridge>
        </blocks>

        <helpers>
            <magebridge>
                <class>Yireo_MageBridge_Helper</class>
            </magebridge>
        </helpers>

        <models>
            <magebridge>
                <class>Yireo_MageBridge_Model</class>
            </magebridge>
        </models>

	</global>

    <admin>
        <routers>
            <magebridge>
                <use>admin</use>
                <args>
                    <module>Yireo_MageBridge</module>
                    <frontName>magebridge</frontName>
                </args>
            </magebridge>
        </routers>
    </admin>

    <adminhtml>
        <translate>
            <modules>
                <Yireo_MageBridge>
                    <files>
                        <default>Yireo_MageBridge.csv</default>
                    </files>
                </Yireo_MageBridge>
            </modules>
        </translate>
        <menu>
             <cms>
                <children>
                    <magebridge translate="title" module="magebridge">
                        <title>MageBridge Installer</title>
                        <action>magebridge/index</action>
                    </magebridge>
                </children>
             </cms>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <magebridge translate="title" module="magebridge">
                                            <title>Yireo MageBridge</title>
                                        </magebridge>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

</config>
