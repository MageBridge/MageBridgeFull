		        <field name="category_id" type="mcategory" return="id" default="" label="MOD_MAGEBRIDGE_PRODUCTS_FIELD_CATEGORY_ID" description="MOD_MAGEBRIDGE_PRODUCTS_FIELD_CATEGORY_ID_DESC" />
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
