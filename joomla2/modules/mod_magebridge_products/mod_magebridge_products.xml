        			<option value="0">JHIDE</option>
		        	<option value="1">JSHOW</option>
        		</field>
        	</fieldset>
        	<fieldset name="category" label="MOD_MAGEBRIDGE_PRODUCTS_FIELDSET_CATEGORY_OPTIONS">
