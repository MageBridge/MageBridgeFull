	        	<field name="load_slideshow_css" type="list" default="1" label="MOD_MAGEBRIDGE_PRODUCTS_FIELD_LOAD_SLIDESHOW_CSS" description="MOD_MAGEBRIDGE_PRODUCTS_FIELD_LOAD_SLIDESHOW_CSS_DESC">
		        	<option value="0">JNO</option>
        			<option value="1">JYES</option>
