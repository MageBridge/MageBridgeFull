        	<fieldset name="product" label="MOD_MAGEBRIDGE_PRODUCTS_FIELDSET_PRODUCT_OPTIONS">
		        <field name="show_title" type="list" default="1" label="MOD_MAGEBRIDGE_PRODUCTS_FIELD_SHOW_TITLE" description="MOD_MAGEBRIDGE_PRODUCTS_FIELD_SHOW_TITLE_DESC">
        			<option value="0">JHIDE</option>
		        	<option value="1">JSHOW</option>
        		</field>
		        <field name="show_short_description" type="list" default="1" label="MOD_MAGEBRIDGE_PRODUCTS_FIELD_SHOW_SHORT_DESCRIPTION" description="MOD_MAGEBRIDGE_PRODUCTS_FIELD_SHOW_SHORT_DESCRIPTION_DESC">
        			<option value="0">JHIDE</option>
		        	<option value="1">JSHOW</option>
        		</field>
        		<field name="show_description" type="list" default="0" label="MOD_MAGEBRIDGE_PRODUCTS_FIELD_SHOW_DESCRIPTION" description="MOD_MAGEBRIDGE_PRODUCTS_FIELD_SHOW_DESCRIPTION_DESC">
		        	<option value="0">JHIDE</option>
        			<option value="1">JSHOW</option>
		        </field>
        		<field name="show_thumb" type="list" default="1" label="MOD_MAGEBRIDGE_PRODUCTS_FIELD_SHOW_THUMB" description="MOD_MAGEBRIDGE_PRODUCTS_FIELD_SHOW_THUMB_DESC">
		        	<option value="0">JHIDE</option>
        			<option value="1">JSHOW</option>
        		</field>
        		<field name="show_price" type="list" default="1" label="MOD_MAGEBRIDGE_PRODUCTS_FIELD_SHOW_PRICE" description="MOD_MAGEBRIDGE_PRODUCTS_FIELD_SHOW_PRICE_DESC">
		        	<option value="0">JHIDE</option>
        			<option value="1">JSHOW</option>
		        </field>
        		<field name="special_price" type="list" default="1" label="MOD_MAGEBRIDGE_PRODUCTS_FIELD_SPECIAL_PRICE" description="MOD_MAGEBRIDGE_PRODUCTS_FIELD_SPECIAL_PRICE_DESC">
			        <option value="0">JHIDE</option>
        			<option value="1">MOD_MAGEBRIDGE_PRODUCTS_FIELD_SPECIAL_PRICE_OPTION_1</option>
		        	<option value="2">MOD_MAGEBRIDGE_PRODUCTS_FIELD_SPECIAL_PRICE_OPTION_2</option>
