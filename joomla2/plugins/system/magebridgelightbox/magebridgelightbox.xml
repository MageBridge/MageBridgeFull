<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
    <name>PLG_SYSTEM_MAGEBRIDGELIGHTBOX</name>
    <author>Yireo</author>
    <creationDate>October 2014</creationDate>
    <copyright>Copyright (C) 2014 Yireo.com. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>info@yireo.com</authorEmail>
    <authorUrl>www.yireo.com</authorUrl>
    <version>1.9.5248</version>
    <description>PLG_SYSTEM_MAGEBRIDGELIGHTBOX_DESC</description>

    <files>
        <filename plugin="magebridgelightbox">magebridgelightbox.php</filename>
        <filename>index.html</filename>
    </files>

    <media folder="media" destination="plg_magebridgelightbox">
        <filename>index.html</filename>
        <folder>prettyphoto</folder>
        <folder>pirobox</folder>
        <folder>lightview</folder>
        <folder>lightbox2</folder>
        <folder>easybox</folder>
        <folder>common</folder>
    </media>

    <languages>
        <language tag="en-GB">en-GB.plg_system_magebridgelightbox.ini</language>
        <language tag="en-GB">en-GB.plg_system_magebridgelightbox.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="library" type="list" default="lightbox2" label="PLG_SYSTEM_MAGEBRIDGELIGHTBOX_LIBRARY" description="PLG_SYSTEM_MAGEBRIDGELIGHTBOX_LIBRARY_DESC">
                    <option value="lightbox2">Lightbox2 (jQuery)</option>
                    <option value="lightview">Lightview (jQuery)</option>
                    <option value="easybox">Easybox (jQuery)</option>
                    <option value="prettyphoto">PrettyPhoto (jQuery)</option>
                    <option value="pirobox">Pirobox (jQuery)</option>
                </field>
                <field name="load_jquery" type="list" default="1" label="PLG_SYSTEM_MAGEBRIDGELIGHTBOX_LOAD_JQUERY" description="PLG_SYSTEM_MAGEBRIDGELIGHTBOX_LOAD_JQUERY_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                    <option value="2">JFORCE</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
