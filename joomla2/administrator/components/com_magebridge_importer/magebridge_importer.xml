<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0" method="upgrade">
    <name>COM_MAGEBRIDGE_IMPORTER</name>
    <author>Yireo</author>
    <authoremail>development@yireo.com</authoremail>
    <authorurl>http://www.yireo.com</authorurl>
    <creationDate>March 2014</creationDate>
    <copyright>Copyright (C) 2014 Yireo.com. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>1.0.0</version>
    <description>COM_MAGEBRIDGE_IMPORTER_DESC</description>

    <!-- installation part -->
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <!-- user part -->
    <files folder="components/com_magebridge_importer">
        <filename>controller.php</filename>
        <filename>index.html</filename>
        <filename>magebridge_importer.php</filename>
        <filename>router.php</filename>
        <folder>helpers</folder>
        <folder>models</folder>
        <folder>views</folder>
    </files>

    <media folder="media">
        <folder>com_magebridge_importer</folder>
    </media>

    <languages folder="language/en-GB">
        <language tag="en-GB">en-GB.com_magebridge_importer.ini</language>
    </languages>

    <!-- administration part -->
    <administration>

        <menu img="../media/com_magebridge/images/menu-magebridge.png">COM_MAGEBRIDGE_IMPORTER</menu>

        <files folder="administrator/components/com_magebridge_importer">
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>magebridge_importer.php</filename>
            <filename>view.php</filename>
            <folder>controllers</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>tables</folder>
            <folder>sql</folder>
            <folder>views</folder>
        </files>

        <languages folder="administrator/language/en-GB">
            <language tag="en-GB">en-GB.com_magebridge_importer.ini</language>
            <language tag="en-GB">en-GB.com_magebridge_importer.sys.ini</language>
            <language tag="en-GB">en-GB.lib_yireo.ini</language>
        </languages>

    </administration>

</extension>
